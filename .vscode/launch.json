{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug nestjs app",
            "args": ["${workspaceFolder}/gateway/src/main.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "restart": true,
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/gateway",
            "protocol": "inspector",
            "env": {
              "NODE_ENV": "development"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Jest (microservice)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/home/facu/.nvm/versions/node/v16.20.2/bin/node",
            "program": "${workspaceFolder}/microservice/node_modules/jest/bin/jest",
            "cwd": "${workspaceFolder}/microservice",
            "args": [
                "--runInBand",
                "--watch=true"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "name": "Debug Jest (gateway)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/home/facu/.nvm/versions/node/v16.20.2/bin/node",
            "program": "${workspaceFolder}/gateway/node_modules/jest/bin/jest",
            "cwd": "${workspaceFolder}/gateway",
            "args": [
                "--runInBand",
                "--watch=true"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "test"
            }
        }
    ]
}